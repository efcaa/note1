        function getEmptyStateIcon() {
            switch(currentTab) {
                case 'important':
                    return 'star';
                case 'scheduled':
                    return 'calendar-alt';
                case 'weekTasks':
                    return 'calendar-week';
                default:
                    return 'sticky-note';
            }
        }

        function formatDateTime(dateString) {
            const date = new Date(dateString);
            return date.toLocaleString('ar-SA', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function getWeekDayName(day) {
