        // ØªØ­Ø¯ÙŠØ« Ù…Ù„Ø§Ø­Ø¸Ø© Ù…ÙˆØ¬ÙˆØ¯Ø©
        function updateExistingNote(id) {
            const noteIndex = notes.findIndex(n => n.id === id);
            if (noteIndex === -1) return;

            notes[noteIndex] = {
                ...notes[noteIndex],
                title: document.getElementById('noteTitle').value,
                content: document.getElementById('noteContent').value,
                folder: document.getElementById('folderSelect').value,
                important: document.getElementById('importantNote').checked,
                lastEdited: new Date().toISOString()
            };

            saveData();
            updateNotes();
            resetForm();
            showNotification('ØªÙ… ØªØ­Ø¯ÙŠØ« Ø§Ù„Ù…Ù„Ø§Ø­Ø¸Ø© Ø¨Ù†Ø¬Ø§Ø­');
        }

