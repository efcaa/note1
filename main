            }
            
            // Ø¥Ø¹Ø§Ø¯Ø© ØªØ¹ÙŠÙŠÙ† Ø§Ù„Ø£Ø²Ø±Ø§Ø± Ø§Ù„Ù†Ø´Ø·Ø© ÙÙŠ Ù…Ø­Ø¯Ø¯ Ø§Ù„Ø£ÙŠØ§Ù…
            document.querySelectorAll('.day-btn').forEach(btn => {
